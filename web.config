<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <system.webServer>
        <handlers>
            <!-- Ensure iisnode is correctly configured to handle app.js -->
            <add name="iisnode" path="app.js" verb="*" modules="iisnode" />
        </handlers>
        
        <rewrite>
            <rules>
                <!-- Rewrite all requests to app.js -->
                <rule name="DynamicContent" stopProcessing="true">
                    <match url=".*" />
                    <action type="Rewrite" url="app.js" />
                </rule>
            </rules>
        </rewrite>
        
        <iisnode>
            <!-- Enable detailed error logs -->
            <logging enabled="true" logDirectory="iisnode" />
            
            <!-- Limit request queue length to avoid resource overuse -->
            <requestQueueLength value="5000" />
            
            <!-- Set node process settings -->
            <nodeProcessCommandLine>node.exe</nodeProcessCommandLine>
        </iisnode>
        
        <security>
            <!-- Adjust security settings if needed -->
            <requestFiltering>
                <hiddenSegments>
                    <add segment="iisnode" />
                </hiddenSegments>
            </requestFiltering>
        </security>
    </system.webServer>
</configuration>
